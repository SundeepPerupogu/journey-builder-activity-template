{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
             "name": "Custom Activity ComponentDateTimeDelta",
             "description": "Journey Builder Custom Activity for Date time Delta API v1.1 format."
             "step1Label": "Configure Activity"
        }
    },
    "arguments": {
        "execute": {
           "inArguments":[
          {
          //  "staticValue": "2024-12-18 01:06:51",
            "future_date": "{{InteractionDefaults.TriggerTime}}"
          },
          {
            "user_timezone": "{{Contact.Default.timezone}}"
          }
        ],,
          "outArguments": [
              {
                "foundSignupDate": ""
              }
            ],
          "url": "https://journey-builder-activity-template-lnph.onrender.com",
           "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    "configurationArguments": {
      "save": {
        "url": "https://journey-builder-activity-template-lnph.onrender.com",
          "verb": "POST",
        "useJwt": true
       },
       "publish": {
        "url": "https://journey-builder-activity-template-lnph.onrender.com",
           "verb": "POST",
        "useJwt": true
       },
      "stop": {
        "url": "https://journey-builder-activity-template-lnph.onrender.com",
           "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "https://journey-builder-activity-template-lnph.onrender.com",
        "verb": "POST",
        "useJwt": true
      }
    },
    "wizardSteps": [
        { "label": "Configure Activity", "key": "step1" }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 400,
            "width": 1000,
          "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
            {
              "future_date": {
                "dataType": "Date",
                "isNullable": false,
                "direction": "in"
              }
            },
            {
              "user_timezone": {
                "dataType": "Text",
                "isNullable": false,
                "direction": "in"
              }
            }
          ],
          "outArguments": [
             {
              "foundSignupDate": {
                "dataType": "Delta",
                "direction": "out",
                "access": "visible"
                }
              }
             ]
            }
        }
    }
}
